<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context="com.example.kyu.arrianeiro.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/main_pic" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="@string/title_of_quiz"
            android:fontFamily="casual"
            android:textAllCaps="true"
            android:textColor="@color/main"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="@string/description_of_quiz"
            android:textColor="@color/plain"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:layout_editor_absoluteX="0dp"
            app:layout_editor_absoluteY="0dp"
            android:orientation="vertical">



            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:layout_marginBottom="12dp"
                android:stretchColumns="*"
                android:background="@color/background2"
                tools:layout_editor_absoluteX="8dp">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:fontFamily="casual"
                    android:text="@string/first_question"
                    android:textColor="@color/plain"
                    android:textSize="16sp" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:textColor="@color/additions"
                        android:text="@string/navigation_system_1"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:textColor="@color/additions"
                        android:text="@string/navigation_system_2"
                        android:layout_marginBottom="12dp"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/additions"
                        android:layout_weight="0.33"
                        android:text="@string/navigation_system_3"
                        android:textSize="12sp" />

                </TableRow>
            </TableLayout>
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:layout_marginBottom="12dp"
                android:stretchColumns="*"
                android:background="@color/background2"
                tools:layout_editor_absoluteX="8dp">
                <TextView
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/plain"
                    android:text="@string/second_question"
                    android:fontFamily="casual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/date_1"
                        android:textColor="@color/additions"
                        android:layout_weight="0"/>

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dialog"/>

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginTop="6dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/additions"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/date_2"
                        android:layout_weight="0"
                        />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dialog"/>

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_3"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/additions"
                        android:layout_weight="0" />

                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dialog"/>
                </TableRow>
            </TableLayout>
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:paddingLeft="10dp"
                android:background="@color/background2"
                android:layout_marginBottom="12dp"
                tools:layout_editor_absoluteX="8dp">
                <TextView
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/plain"
                    android:text="@string/third_question"
                    android:layout_width="match_parent"
                    android:fontFamily="casual"
                    android:layout_height="wrap_content" />


                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:weightSum="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="@color/plain2"
                        android:textColor="@color/additions"
                        android:gravity="center"
                        android:text="@string/acronym_1" />

                    <EditText
                        android:id="@+id/localUserTerminal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/main"
                        android:layout_marginLeft="12dp"
                        android:hint="@string/hint"
                        android:textColorHint="@color/main_hint"
                        android:textSize="14sp"
                        android:inputType="textPersonName" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:weightSum="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:textColor="@color/additions"
                        android:background="@color/plain2"
                        android:gravity="center"
                        android:text="@string/acronym_2" />

                    <EditText
                        android:id="@+id/underwaterLocatorBeacon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/hint"
                        android:layout_marginLeft="12dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/main"
                        android:textColorHint="@color/main_hint"
                        android:textSize="14sp" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:weightSum="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:textColor="@color/additions"
                        android:background="@color/plain2"
                        android:gravity="center"
                        android:text="@string/acronym_3" />

                    <EditText
                        android:id="@+id/extremlyHighFrequency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/main"
                        android:layout_marginLeft="12dp"
                        android:textSize="14sp"
                        android:textColorHint="@color/main_hint"
                        android:hint="@string/hint"
                        android:inputType="textPersonName" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:weightSum="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:textColor="@color/additions"
                        android:background="@color/plain2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/acronym_4" />

                    <EditText
                        android:id="@+id/longRangeAidToNavigation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="12dp"
                        android:textSize="14sp"
                        android:textColor="@color/main"
                        android:textColorHint="@color/main_hint"
                        android:hint="@string/hint"
                        android:inputType="textPersonName" />
                </TableRow>
            </TableLayout>
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:layout_marginBottom="12dp"
                android:background="@color/background2"
                app:layout_constraintTop_toBottomOf="@+id/TextView"
                tools:layout_editor_absoluteX="8dp">
                <TextView
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/plain"
                    android:text="@string/fourth_question"
                    android:fontFamily="casual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:weightSum="3">

                    <RadioGroup
                        android:id="@+id/btnGroup"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/frequency_1"
                            android:textColor="@color/main"
                             />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main"
                            android:layout_weight="1"
                            android:text="@string/frequency_2"
                             />

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main"
                            android:layout_weight="1"
                            android:text="@string/frequency_3"
                             />
                    </RadioGroup>

                </TableRow>
</TableLayout>
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:layout_marginBottom="12dp"
                android:background="@color/background2"
                app:layout_constraintTop_toBottomOf="@+id/TextView"
                tools:layout_editor_absoluteX="8dp">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:text="@string/question5"
                android:fontFamily="casual"
                android:textColor="@color/plain"
                android:textSize="16sp" />



                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp">

                    <Spinner
                        android:id="@+id/spinner_dialog1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@+id/textView1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/main"
                        android:text="@string/duration" />

                    <EditText
                        android:id="@+id/editText4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main"
                        android:textColorHint="@color/main_hint"
                        android:layout_weight="1"
                        android:hint=""/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp">

                    <Spinner
                        android:id="@+id/spinner_dialog2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@+id/textView1_2"
                        android:layout_width="wrap_content"
                        android:textColor="@color/main"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/duration" />

                    <EditText
                        android:id="@+id/editText5"
                        android:layout_width="match_parent"
                        android:textColor="@color/main"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp">

                    <Spinner
                        android:id="@+id/spinner_dialog3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@+id/textView1_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/main"
                        android:text="@string/duration" />

                    <EditText
                        android:id="@+id/editText6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp">

                    <Spinner
                        android:id="@+id/spinner_dialog4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@+id/textView1_4"
                        android:layout_width="wrap_content"
                        android:textColor="@color/main"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/duration" />

                    <EditText
                        android:id="@+id/editText7"
                        android:layout_width="match_parent"
                        android:textColor="@color/main"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp">

                    <Spinner
                        android:id="@+id/spinner_dialog5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@+id/textView1_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main"
                        android:layout_gravity="center"
                        android:text="@string/duration" />

                    <EditText
                        android:id="@+id/editText8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="6dp">

                    <Spinner
                        android:id="@+id/spinner_dialog6"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@+id/textView1_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/duration"
                        android:textColor="@color/main" />

                    <EditText
                        android:id="@+id/editText9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/main" />
                </TableRow>
            </TableLayout>


                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColorHint="@color/plain"
                        android:background="@color/plain2"
                        android:textColor="@color/additions"
                        android:onClick="submit"
                        android:text="@string/submit" />


                    <TextView
                        android:id="@+id/Ans"
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/main"
                        android:layout_height="match_parent"
                        android:background="@color/background2"
                        android:layout_weight="1"
                        android:text="@string/final_statement" />
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>